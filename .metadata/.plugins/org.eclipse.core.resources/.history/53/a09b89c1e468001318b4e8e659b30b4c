def home(request):
    categories = view_data.get_categories()
    home_products = view_data.get_home_products()
    recent_products = view_data.get_recent_products(request)
            
    return render(request, 'home.html', dict(view_data.get_2_plus_column_base_data(request) + {'categories':categories,'products':home_products,'recent':recent_products}))


