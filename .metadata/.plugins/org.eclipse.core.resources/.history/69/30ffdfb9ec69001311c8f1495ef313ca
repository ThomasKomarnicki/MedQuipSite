from django import forms

class ContactForm(forms.Form):
    subject = forms.CharField()
    email = forms.EmailField()
    message = forms.CharField()
    
class RegisterForm(forms.Form):
    pass

class LoginForm(forms.Form):
    email = forms.EmailField(widget=forms.EmailInput(attrs={'placeholder': 'Email Address','class':'registerInput'}))
    password = forms.CharField(widget=forms.PasswordInput(attrs={'placeholder': 'Email Address','class':'registerInput'}))